{
  "routes": [
    {
      "method": "GET",
      "path": "/products",
      "handler": "product.list",
      "config": {
        "auth": false
      }
    },
    {
      "method": "GET",
      "path": "/products/count",
      "handler": "product.count",
      "config": {
        "auth": false
      }
    },
    {
      "method": "GET",
      "path": "/products/:id",
      "handler": "product.findOne",
      "config": {
        "auth": false
      }
    },
    {
      "method": "POST",
      "path": "/products",
      "handler": "product.create",
      "config": {
        "auth": false
      }
    },
    {
      "method": "POST",
      "path": "/products/search",
      "handler": "product.search",
      "config": {
        "auth": false
      }
    },
    {
      "method": "PUT",
      "path": "/products/:id",
      "handler": "product.update",
      "config": {
        "auth": false
      }
    },
    {
      "method": "DELETE",
      "path": "/products/:id",
      "handler": "product.delete",
      "config": {
        "auth": false
      }
    }
  ]
}
